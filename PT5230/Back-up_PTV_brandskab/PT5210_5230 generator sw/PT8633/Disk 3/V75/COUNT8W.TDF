%Bevæglese adderet til Philips-billede i PT8603%
SUBDESIGN count8w
(
	clk,start, window:		INPUT;
	sbo[2..0]:				OUTPUT;
)
VARIABLE
	sb[2..0]:				DFFE;
	st:						DFF;
BEGIN
	st.d = start;
	st.clk = clk;

	sb[2..0].clk= clk;
	sb[].ena  = !(sb[]==7);
	sb[].clrn = st;
	IF st  == 1 THEN
 	 sb[].d	 = sb[].q+1;
	END IF;

%	IF window  == 1 THEN%
 	 sbo[]	 = 7 & window # sb[];
%	END IF;%

END;

