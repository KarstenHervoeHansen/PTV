SUBDESIGN txtadrcb
(
	clk,txt_on, txt0, txt1,a0:				INPUT;
	txtblk[1..0],txtnr[3..0]:	OUTPUT;
)

VARIABLE
	txtnr[3..0]:	DFF;

BEGIN
	txtnr[3..0].clk  = clk;

	IF (txt0 # txt1) # (txtnr[3..0]) > 0 THEN
      txtnr[3..0].d = txtnr[3..0].q+1;
	END IF;

	txtblk0	= txt0;
	txtblk1	= txt1 # a0%s1%;  %Reset af dual port RAM%

END;


