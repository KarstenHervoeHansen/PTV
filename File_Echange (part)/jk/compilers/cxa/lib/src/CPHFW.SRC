; @(#)cphfw.src	1.5 7/22/97
;*****************************************************************************
;*
;* MODULE	: cphfw.asm
;*
;* APPLICATION	: run time C library
;*
;* DESCRIPTION	: Copy data block from huge data to far data. The source and
;*		  destination address pointers and the number of words to
;*		  copy are passed to this copy routine via registers. The
;*		  registers used are :
;*
;*		
;*		  R3:R2 = address source
;*		  R5:R4 = address destination (LARGE)
;*		  DS:R4 = address destination (MEDIUM)
;*		  R6    = number of words to copy
;*
;* INPUT	: R2-R6
;*
;* OUTPUT	: none
;*
;* USES		: R2-R6
;*
;* COPYRIGHT	: 1996 Copyright TASKING, Inc.
;* 
;*****************************************************************************
INCLUDE	'HEAD'

		NAME _CPHFW

CODE_SEG_DEF
		RSEG	LIBRT_PR

		PUBLIC	__CPHFW
__CPHFW:
IF	MODEL_LARGE
	PUSH.B	DS		; save default data segment
	CLR	SSEL.4		; destination addressed via DS
	MOV.B	DS,R5L		; destination addressed via DS
ELSE
	SETB	SSEL.2		; source addressed via ES
ENDIF
loop:
	MOV.B	ES,R3L		; source addressed via ES
	MOV.W	[R4+],[R2+]	; copy source to destination
	SUB.W	R2,#02H		; increment source pointer
	ADD.W	R2,#02H		; increment source pointer
	ADDC.W	R3,#00H		;
	DJNZ.W	R6,loop		; loop if count not zero
IF	MODEL_LARGE
	SETB	SSEL.4		; restore source pointer
	POP.B	DS		; restore default data segement
ELSE
	CLR	SSEL.2		; restore source pointer
ENDIF
	RET			; and return

	END
