$CASE

;;
;; Check if the correct model is defined. If not, we use the default model
;; TINY and set the others to 0.
;;
IF	!(@DEF('MODEL_TINY') || @DEF('MODEL_SMALL') || @DEF('MODEL_MEDIUM') || @DEF('MODEL_LARGE'))
	DEFINE	MODEL_TINY	"1"
ENDIF

IF	!@DEF('MODEL_TINY')
	DEFINE	MODEL_TINY	"0"
ENDIF

IF	!@DEF('MODEL_SMALL')
	DEFINE	MODEL_SMALL	"0"
ENDIF

IF	!@DEF('MODEL_MEDIUM')
	DEFINE	MODEL_MEDIUM	"0"
ENDIF

IF	!@DEF('MODEL_LARGE')
	DEFINE	MODEL_LARGE	"0"
ENDIF

IF	!@DEF('DO_FILE_IO')
	DEFINE	DO_FILE_IO	"0"
ENDIF

IF	MODEL_MEDIUM || MODEL_LARGE

	$NOZPAGE
	DEFINE	GCALL		'FCALL'
	DEFINE	GJMP		'FJMP'
	DEFINE	CODE_SEG_DEF	'LIBRT_PR	SEGMENT HCODE INSEGMENT'

ELSE

	$ZPAGE
	DEFINE	GCALL		'CALL'
	DEFINE	GJMP		'JMP'
	DEFINE	CODE_SEG_DEF	'LIBRT_PR	SEGMENT CODE'

ENDIF
