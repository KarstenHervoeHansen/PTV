	tnode[9..0] :	TRI_STATE_NODE;
BEGIN
	tnode9	= TRI(dm9,!oe);
	tnode8	= TRI(dm8,!oe);
	tnode7	= TRI(dm7,!oe);
	tnode6	= TRI(dm6,!oe);
	tnode5	= TRI(dm5,!oe);
	tnode4	= TRI(dm4,!oe);
	tnode3	= TRI(dm3,!oe);
	tnode2	= TRI(dm2,!oe);
	tnode1	= TRI(dm1,!oe);
	tnode0	= TRI(dm0,!oe);

	dmbuf[9..0]		= tnode[9..0];

END;

